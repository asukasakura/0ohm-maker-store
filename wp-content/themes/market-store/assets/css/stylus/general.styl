.elementor-element
  .elementor-widget-heading
    .elementor-widget-container
      .elementor-heading-title
        position: relative
        &:before
          content: ''
          background: secondary
          display: block
          height: 3px
          width: 2rem
          position: absolute
          left: -3rem
          {absolute-center}
.no-posts-found
  display: none
.price
  ins
    text-decoration: none

#footer
  background: darkPrimary
  color white
  a
    color white
  .widget.widget_nav_menu
    .widgettitle
      font-size: 1rem
      font-weight: 600
      margin-bottom: 1rem
      text-transform: uppercase
      position: relative
      &:before
        content: ''
        background: secondary
        display: block
        height: 2px
        width: 1.5rem
        position: absolute
        left: -2rem
        {absolute-center}
    nav[class^='menu']
      ul
        padding: 0
        li
          font-size: 0.9rem
          line-height: 180%
          list-style none
          a
            opacity .8
            &:hover
              opacity 1
              font-weight: 500