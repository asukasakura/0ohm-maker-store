    .navbar
      display: block
      position: absolute
      top: 0
      width: auto
      z-index 10
      &-nav
        background-color: white
        box-shadow: 0 2px 3px 0 rgba(18, 16, 11, 15%)
        border-radius: 0 0 6px 6px
        display: block
        li.menu-item
          border-bottom: 1px solid #f2f2f2
          &:last-child
            border 0
        .nav-link
          align-items: center
          color primary
          display: flex
          padding: .8em 1em
          white-space: nowrap
          {transition}
          i
            color tertiary
            margin-right: .6em
          &:hover
            color tertiary
            padding .8em .6em .8em 1.4em
.menu-categories 
  .navbar
    @media (max-width: 990px)
      color: white
      a,
      .nav-link
        color: white
@media (max-width: 991px)
  .menu-categories
    &_title
      display: none
.aws
  &-container
    justify-content: flex-end
    display: flex
    .aws-search-form
      justify-content: end
      .aws-form-btn
        background secondary
        border 0
        border-radius: 0 30px 30px 0!important
        width: 52px
        &:hover
          background: darken(secondary, 5%)
      .aws-search-btn_icon
        color white
      .aws-wrapper
        background: white
        border: 1px solid #e6e6e6
        border-radius: 30px 0 0 30px!important
    .aws-show-clear
      .aws-search-field
        background: transparent
        border: 0
        cursor pointer
        font-size: .9em
        padding-left: 1em
  &-search-form
    position: relative
    min-width: 50px
    height: 50px
    float: right
    overflow: hidden
    width: 70%!important
    {transition}
  &-focus
    width: 100%!important
    
.menu-fixed
  position: fixed
  left: 0
  top: 0
  width: 100%
  z-index: 100
  #collapseCategory
    height: 100%
  .menu-categories
    #main-nav
      height: 100%
    .navbar-nav
      background: inherit
      box-shadow: none
      display: flex
      height: 100%
      align-items: center
      li.menu-item 
        border 0
        height: 100%
    .nav-link
      color: white
      height: 100%
      position: relative
      padding: 0 1.5em
      &:hover
        padding: 0 1.5em
      {transition}
      i
        display: none
      &:hover
        color: white
        &:after
          transform: scaleX(1)
          transform-origin: left
      &:after
        position: absolute
        content: ""
        width: 100%
        height: 3px
        bottom 0
        left: 0
        background: secondary
        transition: transform 0.5s
        transform: scaleX(0)
        transform-origin: right
    .navbar
      display: flex
      position: relative
    &_title
      @media (min-width: 991px)
        display: none
  .aws
    &-container
      .aws-search-form
        .aws-wrapper
          border 0
          border-radius: 60px!important
          flex-grow: 0
          max-width: 300px
          width: 0
          {transition}
        .aws-form-btn
          align-items: center
          border-radius: 60px!important
          {transition}
    &-focus.aws-search-form
      .aws-wrapper
        border-radius: 60px 0 0 60px!important
        width: 100%!important
      .aws-form-btn
        border-radius: 0 30px 30px 0!important

