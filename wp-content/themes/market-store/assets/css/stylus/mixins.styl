darkPrimary   = #173242
primary   = #024959
secondary = #BF7E06
// secondary = #D9840D
tertiary  = #2A78A8
gris = #bdbdbd

transition =
    -webkit-transition: all 0.3s
    -moz-transition: all 0.3s
    -ms-transition: all 0.3s
    -o-transition: all 0.3s
    transition: all 0.3s

transition-delay =
    -webkit-transition: all 0.5s
    -moz-transition: all 0.5s
    -ms-transition: all 0.5s
    -o-transition: all 0.5s
    transition: all 0.5s

rem(value) 
  base-font-size ?= 16px
  type = unit(value)
  if type == px
    return unit(value / base-font-size, 'rem')
  else
    return unit(value, type)
    

important = unquote('!important')
colores   = ( ('primary' primary) ('secondary' secondary) ('tertiary' tertiary) )

for col in colores
  .ohm_text-{col[0]}
    color col[1] important

for col in colores
  .ohm_bg-{col[0]}
    background col[1] important

for col in colores
  for n in 1...3
    .ohm_border{n}-{col[0]}
      border (n)px solid col[1] important

absolute-center =
  top: 50%
  -ms-transform: translateY(-50%)
  transform: translateY(-50%)

