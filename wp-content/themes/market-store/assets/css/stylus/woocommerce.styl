#carousel-home
  &.elementor-widget-eael-woo-product-carousel .woocommerce 
    ul.products li.product .button
      margin 0
    .eael-product-carousel
      height: 99%
      justify-content: space-between
      display: flex
      flex-direction: column
    .swiper-wrapper.products .product
      height: 100%
  .eael-product-carousel .eael-product-price 
    del
      color gris
      .woocommerce-Price-amount
        color gris
        font-size: .75rem
        font-weight: normal
    ins
      text-decoration: none
  .product-details-wrap
    align-items: flex-end
  .eael-product-title *
    margin: 0
  .view-details
    display: none

@media (min-width: 768px)
  #home-masonry .eael-product-gallery .woocommerce 
    ul.products
      grid-template-rows: repeat(4, 1fr)
      li.product
        &:first-child     
          grid-area: 1 / 1 / 3 / 5
          & > div
            height: 100%
            display: flex
            .product-image-wrap
              width: 150%
            .product-details-wrap
              justify-content: space-between
              display: flex
              flex-direction: column
          .woocommerce-loop-product__title,
          .eael-product-title *
            font-size: 1.4rem
          .eael-product-price
            font-size: 1.5rem
        &:nth-child(2)
          grid-area: 1 / 5 / 2 / 7
        &:nth-child(3)
          grid-area: 2 / 5 / 3 / 7
        &:nth-child(4)
          grid-area: 3 / 3 / 4 / 5
        &:nth-child(5)
          grid-area: 4 / 3 / 5 / 5
        &:nth-child(6)
          grid-area: 3 / 5 / 5 / 7
          & > div
            display: flex
            flex-direction: column
            height: 100%
            justify-content: space-between
          .product-details-wrap
            display: flex
            justify-content: space-between
            align-items: flex-end
          .woocommerce-loop-product__title,
          .eael-product-title *,
          .eael-product-price
            font-size: 1.2rem
        &:nth-child(7)
          grid-area: 3 / 1 / 4 / 3
        &:nth-child(8)
          grid-area: 4 / 1 / 5 / 3
        &:nth-child(2),
        &:nth-child(3),
        &:nth-child(4),
        &:nth-child(5),
        &:nth-child(7),
        &:nth-child(8)
          & > div
            display: flex
            height: 100%
            .product-details-wrap
              justify-content: space-between
              display: flex
              flex-direction: column
        .eael-product-price 
          text-align: right
          del
            display: block
            color gris
            .woocommerce-Price-amount
              color gris
              font-size: .75rem
              font-weight: normal
          ins
            text-decoration: none
