.header-top
  padding 30px 0

.navbar-brand
  max-width: 200px
.menu-categories
  display: flex
  height: 100%
  position relative
  min-width: 25%
  z-index 10
  &_wraper
    height: 60px
    position: relative
  &_title
    background: primary
    display: flex
    color white
    font-size: .72rem
    font-weight: 500
    flex-direction: column 
    height: 60px
    justify-content: center
    position: relative
    padding: 0 1em .2em 1em
    text-transform: uppercase
    &:before
      content ''
      background: primary
      border-radius: 6px 6px 0 0
      display: block
      height: 6px
      left: 0
      position: absolute
      top: -6px 
      width: 100%
  .navbar
    display: block
    position: absolute
    top: 0
    width: auto
    z-index 10
    &-nav
      background-color: white
      box-shadow: 0 2px 3px 0 rgba(18, 16, 11, 15%)
      display: block
      li.menu-item
        border-bottom: 1px solid #f2f2f2
        padding: 0 1em 0 1em
        {transition}
        &:hover
          padding 0 .6em 0 1.4em
      .nav-link
        align-items: center
        color primary
        display: flex
        white-space: nowrap
        i
          color tertiary
          margin-right: .6em
        &:hover
          color tertiary
    
.aws
  &-container
    justify-content: flex-end
    display: flex
    .aws-search-form
      .aws-form-btn
        background secondary
        border 0
        border-radius: 0 30px 30px 0!important
        width: 52px
        &:hover
          background: darken(secondary, 5%)
      .aws-search-btn_icon
        color white
      .aws-wrapper
        background: white
        border: 1px solid #e6e6e6
        border-radius: 30px 0 0 30px!important
    .aws-show-clear
      .aws-search-field
        background: transparent
        border: 0
        font-size: .9em
        padding-left: 1em
  &-search-form
    position: relative
    min-width: 50px
    width: 50%!important
    height: 50px
    float: right
    overflow: hidden
    {transition}
  &-focus
    width: 100%!important